<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".AllocateOtPage">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:background="@android:color/transparent"
            android:src="@drawable/chevron_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:fontFamily="@font/inter_bold"
            android:text="Allocte Overtime"
            android:textColor="@color/black"
            android:textSize="@dimen/dp20" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp150"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        app:cardCornerRadius="@dimen/dp30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.175">

        <Button
            android:id="@+id/Allocate_ot"
            android:layout_width="@dimen/dp290"
            android:layout_height="@dimen/dp45"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/chevron_right"
            android:elevation="@dimen/dp20"
            android:fontFamily="@font/inter_bold"
            android:paddingLeft="@dimen/dp10"
            android:text="Allocate Overtime"
            android:textAlignment="center"
            android:textSize="@dimen/dp14" />

        <Button
            android:id="@+id/view_request"
            android:layout_width="@dimen/dp290"
            android:layout_height="@dimen/dp45"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/dp20"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/chevron_right"
            android:elevation="@dimen/dp20"
            android:fontFamily="@font/inter_bold"
            android:paddingLeft="@dimen/dp10"
            android:text="View Request"
            android:textAlignment="center"
            android:textSize="@dimen/dp14" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>