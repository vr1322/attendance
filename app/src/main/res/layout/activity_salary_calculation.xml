<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:background="@android:color/transparent"
                android:src="@drawable/chevron_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:fontFamily="@font/inter_bold"
                android:text="Salary Calculation"
                android:textColor="@color/black"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <!-- Month Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Month: YYYY-MM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"/>

            <Button
                android:id="@+id/btnSelectMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Month"
                android:backgroundTint="#2980B9"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Employee Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEmpName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:textSize="16sp"
                    android:textColor="#34495E"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Salary Breakdown Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBasicPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Pay: ₹0"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvTotalDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Days: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvPresentDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present Days: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvAbsentDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent Days: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overtime Pay"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp"/>

                <!-- Editable Overtime Pay -->
                <EditText
                    android:id="@+id/etOvertimePay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Overtime Pay"
                    android:inputType="number"
                    android:text="0"
                    android:backgroundTint="#BDC3C7"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"/>


                <!-- Deductions Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PF Deductions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp"/>

                <!-- PF Deduction -->
                <EditText
                    android:id="@+id/etPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter PF amount"
                    android:inputType="number"
                    android:text="0"
                    android:backgroundTint="#BDC3C7"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_rounded"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESIC/PT Deductions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp"/>

                <!-- ESIC/PT Deduction -->
                <EditText
                    android:id="@+id/etEsicPt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter ESIC/PT amount"
                    android:inputType="number"
                    android:text="300"
                    android:backgroundTint="#BDC3C7"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_rounded"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uniform Deductions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp"/>

                <!-- Uniform Deduction -->
                <EditText
                    android:id="@+id/etUniform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Uniform deduction"
                    android:inputType="number"
                    android:text="0"
                    android:backgroundTint="#BDC3C7"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_rounded"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fine Deductions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp"/>

                <!-- Fine Deduction -->
                <EditText
                    android:id="@+id/etFine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Fine deduction"
                    android:inputType="number"
                    android:text="0"
                    android:backgroundTint="#BDC3C7"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"/>

                <!-- Advance Payment Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Payment"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp"/>

                <!-- Advance Payment -->
                <EditText
                    android:id="@+id/etAdvance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Advance payment"
                    android:inputType="number"
                    android:text="0"
                    android:backgroundTint="#BDC3C7"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edittext_rounded"/>

                <!-- Total Deduction -->
                <TextView
                    android:id="@+id/tvTotalDeduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Deduction: ₹0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#E74C3C"
                    android:layout_marginBottom="12dp"/>

                <!-- Net Salary -->
                <TextView
                    android:id="@+id/tvNetSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Salary: ₹0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#27AE60"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Salary"
            android:backgroundTint="#2980B9"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="14dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Salary Slip"
            android:backgroundTint="#27AE60"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnViewSlip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Salary Slip"
            android:backgroundTint="#8E44AD"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
