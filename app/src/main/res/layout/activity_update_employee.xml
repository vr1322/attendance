<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg">

        <!-- Back Button & Title -->
        <LinearLayout
            android:id="@+id/linearLayout_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_employee"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="top|left"
                android:clickable="true"
                android:padding="@dimen/dp11"
                android:src="@drawable/chevron_left" />

            <TextView
                android:id="@+id/updttext_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Update Profile"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:textSize="@dimen/dp20" />

            <TextView
                android:id="@+id/logout_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogOut"
                android:textSize="@dimen/dp18"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="@dimen/dp70"
                android:clickable="true"
                android:textColor="@color/red"/>

            <ImageView
                android:id="@+id/logout_iv_employee"
                android:layout_gravity="top|right"
                android:layout_width="@dimen/dp25"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp10"
                android:clickable="true"
                android:src="@drawable/ic_logout" />
        </LinearLayout>

        <!-- Company Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_employee"
            android:layout_width="@dimen/dp320"
            android:layout_height="@dimen/dp190"
            android:layout_marginTop="@dimen/dp100"
            app:cardCornerRadius="@dimen/dp20"
            app:layout_constraintBottom_toTopOf="@id/card2_employee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic_employee"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp90"
            android:src="@drawable/ic_profile"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp150"
            android:elevation="@dimen/dp10"
            app:civ_border_width="@dimen/dp3"
            app:civ_border_color="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/linearLayout_employee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/card_employee"
            tools:ignore="MissingClass" />

        <!-- Company Info Labels -->
        <TextView
            android:id="@+id/cname_View_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp60"
            android:layout_marginEnd="@dimen/dp180"
            android:elevation="@dimen/dp10"
            android:text="Company Name :"
            android:textSize="@dimen/dp14"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintBottom_toTopOf="@id/creg_View_employee"
            app:layout_constraintEnd_toEndOf="@id/card_employee"
            app:layout_constraintStart_toStartOf="@id/card_employee"
            app:layout_constraintTop_toTopOf="@id/card_employee" />

        <TextView
            android:id="@+id/creg_View_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp170"
            android:elevation="@dimen/dp10"
            android:text="Company Reg No : "
            android:textSize="@dimen/dp14"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/ccode_View_employee"
            app:layout_constraintEnd_toEndOf="@id/card_employee"
            app:layout_constraintStart_toStartOf="@id/card_employee"
            app:layout_constraintTop_toBottomOf="@id/cname_View_employee" />

        <TextView
            android:id="@+id/ccode_View_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp180"
            android:elevation="@dimen/dp10"
            android:text="Company code :"
            android:textSize="@dimen/dp14"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/shortn_View_employee"
            app:layout_constraintEnd_toEndOf="@id/card_employee"
            app:layout_constraintStart_toStartOf="@id/card_employee"
            app:layout_constraintTop_toBottomOf="@id/creg_View_employee" />

        <TextView
            android:id="@+id/shortn_View_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp180"
            android:layout_marginBottom="@dimen/dp10"
            android:elevation="@dimen/dp10"
            android:fontFamily="@font/inter_bold"
            android:text="(short name)"
            android:textSize="@dimen/dp12"
            app:layout_constraintBottom_toBottomOf="@id/card_employee"
            app:layout_constraintEnd_toEndOf="@id/card_employee"
            app:layout_constraintStart_toStartOf="@id/card_employee"
            app:layout_constraintTop_toBottomOf="@id/ccode_View_employee" />

        <!-- Company Info Values -->
        <TextView
            android:id="@+id/companyName_employee"
            android:layout_width="@dimen/dp190"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:elevation="@dimen/dp10"
            android:text="ABC Ltd."
            android:textSize="@dimen/dp14"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/companyRegNo_employee"
            app:layout_constraintEnd_toEndOf="@id/card_employee"
            app:layout_constraintStart_toEndOf="@id/cname_View_employee"
            app:layout_constraintTop_toTopOf="@id/card_employee" />

        <TextView
            android:id="@+id/companyRegNo_employee"
            android:layout_width="@dimen/dp180"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp10"
            android:text="123456"
            android:textSize="@dimen/dp14"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/companyCode_employee"
            app:layout_constraintEnd_toEndOf="@id/card_employee"
            app:layout_constraintStart_toEndOf="@id/cname_View_employee"
            app:layout_constraintTop_toBottomOf="@id/companyName_employee" />

        <TextView
            android:id="@+id/companyCode_employee"
            android:layout_width="@dimen/dp190"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp18"
            android:elevation="@dimen/dp10"
            android:text="EMP001"
            android:textSize="@dimen/dp14"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/card_employee"
            app:layout_constraintEnd_toEndOf="@id/card_employee"
            app:layout_constraintStart_toEndOf="@id/cname_View_employee"
            app:layout_constraintTop_toBottomOf="@id/companyRegNo_employee" />

        <!-- Editable Employee Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card2_employee"
            android:layout_width="@dimen/dp320"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            app:cardCornerRadius="@dimen/dp20"
            app:layout_constraintBottom_toTopOf="@id/updateBtn_employee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_employee">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/employeeName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:background="@drawable/btn_bg"
                    android:drawableRight="@drawable/ic_admin"
                    android:hint="Employee Name"
                    android:paddingStart="@dimen/dp20"
                    android:elevation="@dimen/dp10" />

                <TextView
                    android:id="@+id/designation_employee"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_bg"
                    android:drawableRight="@drawable/ic_designation"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp20"
                    android:text="Employee"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/black"
                    android:elevation="@dimen/dp10"/>

                <EditText
                    android:id="@+id/employeeEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_bg"
                    android:drawableRight="@drawable/ic_email"
                    android:hint="E-mail ID"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/dp20"
                    android:elevation="@dimen/dp10" />

                <EditText
                    android:id="@+id/employeeMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_bg"
                    android:drawableRight="@drawable/ic_phone"
                    android:hint="Mobile No"
                    android:inputType="phone"
                    android:paddingStart="@dimen/dp20"
                    android:elevation="@dimen/dp10" />

                <EditText
                    android:id="@+id/employeeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_bg"
                    android:drawableRight="@drawable/ic_address"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:paddingStart="@dimen/dp20"
                    android:elevation="@dimen/dp10" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Update Button -->
        <Button
            android:id="@+id/updateBtn_employee"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp20"
            android:background="@drawable/button"
            android:text="UPDATE"
            android:textSize="@dimen/dp18"
            app:layout_constraintTop_toBottomOf="@id/card2_employee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
